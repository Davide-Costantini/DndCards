@inherits LayoutComponentBase
@inject IStringLocalizer<App> Loc

<PageTitle>Dnd Cards</PageTitle>

<div class="page">
    <main>
        <RadzenDialog />
        <RadzenNotification />

        <RadzenLayout>
            <RadzenHeader>
                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
                    <RadzenSidebarToggle Click="@ToggleSidebar" />
                    <RadzenLabel Text="@Loc[nameof(Resources.App.DndCardsHeader)]" />
                </RadzenStack>
            </RadzenHeader>
            <RadzenSidebar @bind-Expanded="@_isSidebarExpanded" class="d-flex flex-column justify-content-between" >
                <RadzenPanelMenu>
                    <RadzenPanelMenuItem Text="@Loc[nameof(Resources.App.CardBuilder)]" Icon="create" Path="cardBuilder" />
                    <RadzenPanelMenuItem Text="@Loc[nameof(Resources.App.Themes)]" Icon="color_lens" Path="themes" />
                </RadzenPanelMenu>
                <div class="d-flex justify-content-center">
                    <img src="images/LogoNoBackground.png" alt="Logo" style="max-width: 85%; max-height: 85%;" class="align-self-end" />
                </div>
            </RadzenSidebar>
            <RadzenBody>
                <div class="rz-p-4">
                    @Body
                </div>
            </RadzenBody>
        </RadzenLayout>
    </main>
</div>

@code {
    private bool _isSidebarExpanded = true;

    private void ToggleSidebar()
    {
        _isSidebarExpanded = !_isSidebarExpanded;
    }
}
